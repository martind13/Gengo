<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chapter1_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.devma.gengojapanese.Chapter1_1"
    android:weightSum="1"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/info_box"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/textView11"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:textColor="@android:color/background_light"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:text="Hiragana is the basic Japanese phonetic script. It represents every sound in the Japanese language." />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.12">

                <Button
                    android:layout_width="90dp"
                    android:id="@+id/chapter1_1_A"
                    android:layout_height="90dp"
                    android:textSize="50sp"
                    android:onClick="clickHira1"
                    android:background="@drawable/a_orange"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:id="@+id/textview1"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:textStyle="normal|bold"
                        android:textSize="17sp"
                        android:textColor="@color/lock_button" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.12">

                <Button
                    android:background="@drawable/i_orange"
                    android:layout_width="90dp"
                    android:id="@+id/chapter1_1_I"
                    android:layout_height="90dp"
                    android:textSize="50sp"
                    android:onClick="clickHira2"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview2"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textStyle="normal|bold"
                        android:textSize="17sp"
                        android:textColor="@color/lock_button" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.12">

                <Button
                    android:background="@drawable/u_orange"
                    android:layout_width="90dp"
                    android:id="@+id/chapter1_1_U"
                    android:layout_height="90dp"
                    android:textSize="50sp"
                    android:onClick="clickHira3"
                    style="@style/Widget.AppCompat.Button.Borderless"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview3"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textStyle="normal|bold"
                        android:textSize="17sp"
                        android:textColor="@color/lock_button" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.12">

                <Button
                    android:background="@drawable/e_orange"
                    android:layout_width="90dp"
                    android:id="@+id/chapter1_1_E"
                    android:layout_height="90dp"
                    android:textSize="50sp"
                    android:onClick="clickHira4"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview4"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:textStyle="normal|bold"
                        android:textSize="17sp"
                        android:textColor="@color/lock_button" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="106dp">

                <Button
                    android:background="@drawable/o_orange"
                    android:layout_width="90dp"
                    android:id="@+id/chapter1_1_O"
                    android:layout_height="90dp"
                    android:textSize="50sp"
                    android:onClick="clickHira5"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview5"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_marginLeft="21dp"
                        android:layout_marginStart="21dp"
                        android:textStyle="normal|bold"
                        android:textSize="17sp"
                        android:textColor="@color/lock_button"
                        android:layout_marginTop="24dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="0.12"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/next1"
                    android:onClick="nextPage1_1"
                    android:layout_weight="1"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:theme="@style/MyButton2"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="Continue"
                    android:textStyle="normal|bold"
                    android:textSize="17sp"
                    android:textColor="@color/colorAccent" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
