<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_welcome_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.devma.gengojapanese.WelcomeScreen">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="440dp">

        <Button

            android:text="Chapters"
            android:id="@+id/chapters"
            android:onClick="chaptersClick"
            android:layout_width="match_parent"
            android:textStyle="normal|bold"
            android:theme="@style/MyButton"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="70dp"
            android:textColor="#FFFFFF"
            android:textSize="30sp"/>

        <Button
            android:text="Practice"
            android:id="@+id/practice"
            android:onClick="practiceClick"
            android:layout_width="match_parent"
            android:textStyle="normal|bold"
            android:theme="@style/MyButton"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="70dp"
            android:textColor="#FFFFFF"
            android:textSize="30sp"/>

        <Button
            android:text="Vocabulary"
            android:id="@+id/vocab"
            android:onClick="vocabClick"
            android:layout_width="match_parent"
            android:textStyle="normal|bold"
            android:theme="@style/MyButton"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="70dp"
            android:textColor="#FFFFFF"
            android:textSize="30sp"/>

        <Button
            android:text="kanji"
            android:id="@+id/kanji"
            android:onClick="kanjiClick"
            android:layout_width="match_parent"
            android:textStyle="normal|bold"
            android:theme="@style/MyButton"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="70dp"
            android:textColor="#FFFFFF"
            android:textSize="30sp"/>

        <Button
            android:text="Logout"
            android:id="@+id/logout"
            android:onClick="logoutClick"
            android:layout_width="match_parent"
            android:textStyle="normal|bold"
            android:theme="@style/MyButton2"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="70dp"
            android:textColor="#FFFFFF"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>
</LinearLayout>
